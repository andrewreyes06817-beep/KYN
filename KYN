<script>
    // --- CONFIGURATION ---
    const CSV_URL = "https://docs.google.com/spreadsheets/d/e/2PACX-1vTR3OqdtbJYg4FPvRqsItUo3HBiHH_AGH809QZN0forZKWm01KT33_c-1F7vafKmUUGvo0U0EFCw8MW/pub?gid=0&single=true&output=csv";
    const TALLY_FORM_URL = "https://tally.so/r/lbO44o";

    // --- LOGIC ---
    const params = new URLSearchParams(window.location.search);
    const tagId = params.get('id');

    async function init() {
        if (!tagId) {
            document.body.innerHTML = "<h1>Invalid Tag</h1><p>Please scan a valid KIN-TAG.</p>";
            return;
        }

        try {
            const response = await fetch(CSV_URL, { cache: "no-store" });
            const text = await response.text();
            const rows = text.split("\n").map(row => row.split(","));
            
            // Find user by ID (Column A)
            const user = rows.find(r => r[0].trim() === tagId);

            document.getElementById('loader').style.display = 'none';
            document.getElementById('app').style.display = 'block';

            if (user && user[1] && user[1].trim() !== "") {
                // STATE: ACTIVATED
                document.getElementById('view-activated').style.display = 'block';
                document.getElementById('userName').innerText = user[1];
                document.getElementById('callLink').href = "tel:" + user[2];
                document.getElementById('userPhoto').src = user[3] || "https://via.placeholder.com/150";
                document.getElementById('userMsg').innerText = user[4] || "If found, please contact my family.";
                document.getElementById('userMed').innerText = user[5] || "None provided.";
                
                // Set hidden phone for location logic
                window.ownerPhone = user[2];
            } else {
                // STATE: UNACTIVATED
                document.getElementById('view-setup').style.display = 'block';
                document.getElementById('activateLink').href = `${TALLY_FORM_URL}?id=${tagId}`;
            }
        } catch (err) {
            console.error("Fetch error:", err);
            document.body.innerHTML = "<h1>Connection Error</h1><p>Please check your internet.</p>";
        }
    }

    function toggleMed() {
        const box = document.getElementById('medBox');
        box.style.display = (box.style.display === 'block') ? 'none' : 'block';
    }

    function sendLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(pos => {
                const mapLink = `https://www.google.com/maps?q=${pos.coords.latitude},${pos.coords.longitude}`;
                const text = encodeURIComponent(`I found your item/loved one! Current location: ${mapLink}`);
                window.location.href = `https://wa.me/${window.ownerPhone}?text=${text}`;
            }, () => {
                alert("Please allow GPS to send the location.");
            });
        }
    }

    init();
</script>
</body>
