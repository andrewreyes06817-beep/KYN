<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- 1. SECURITY: Content Security Policy (CSP) -->
    <!-- This prevents unauthorized scripts from running or sending data to hackers -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'one-tap-safe' 'unsafe-inline' https://fonts.googleapis.com; style-src 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com; img-src 'self' data: https:; connect-src https://docs.google.com https://google.com;">

    <title>KIN | Secure Retrieval</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;600&display=swap" rel="stylesheet">
    
    <style>
        :root { --primary: #2D5A27; --bg: #F8F5F0; --white: #ffffff; --red: #D9534F; }
        body { font-family: 'Outfit', sans-serif; background-color: var(--bg); margin: 0; display: flex; justify-content: center; align-items: center; min-height: 100vh; overflow-x: hidden; }
        
        .container { width: 90%; max-width: 400px; background: var(--white); border-radius: 35px; padding: 30px; box-shadow: 0 20px 50px rgba(0,0,0,0.05); text-align: center; display: none; }
        
        /* Anti-Crash Loader */
        #loader { border: 4px solid #f3f3f3; border-top: 4px solid var(--primary); border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }

        .btn { display: flex; align-items: center; justify-content: center; padding: 18px; border-radius: 18px; font-weight: 600; text-decoration: none; border: none; cursor: pointer; transition: 0.2s; width: 100%; margin: 10px 0; }
        .btn-call { background: var(--primary); color: white; }
        .btn-activate { background: #000; color: white; }
        
        /* Error Message Style */
        .error-state { color: var(--red); padding: 20px; border: 1px dashed var(--red); border-radius: 15px; }
    </style>
</head>
<body>

    <div id="loader"></div>
    <div id="error-display" class="container" style="display:none;"></div>

    <!-- MAIN APP INTERFACE -->
    <div id="app" class="container">
        <div id="content"></div>
        <div style="margin-top:20px; font-size:0.7rem; color:#BBB; letter-spacing: 2px;">SECURE BY KIN</div>
    </div>

<script>
    /**
     * 2. SECURITY: DATA SANITIZATION ENGINE
     * Prevents "Malware Injection" by stripping out any HTML/Scripts 
     * from the Google Sheet before displaying it.
     */
    function sanitize(string) {
        const temp = document.createElement('div');
        temp.textContent = string;
        return temp.innerHTML;
    }

    /**
     * 3. CONFIGURATION & FAIL-SAFES
     */
    const CONFIG = {
        SHEET_URL: "YOUR_PUBLISHED_CSV_LINK_HERE",
        TALLY_URL: "https://tally.so/r/YOUR_ID",
        TIMEOUT_MS: 8000 // 8 seconds timeout before crash prevention triggers
    };

    const params = new URLSearchParams(window.location.search);
    const tagId = params.get('id');

    /**
     * 4. APP LOGIC WITH ERROR BOUNDARIES (Anti-Bugging)
     */
    async function startApp() {
        if (!tagId || !/^[a-zA-Z0-9-]+$/.test(tagId)) { 
            showError("Invalid or Suspicious Tag ID. Access Denied.");
            return;
        }

        // Fetch with Timeout Protection
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), CONFIG.TIMEOUT_MS);

        try {
            const response = await fetch(CONFIG.SHEET_URL, { signal: controller.signal });
            clearTimeout(timeoutId);

            if (!response.ok) throw new Error("Server Unreachable");

            const text = await response.text();
            const rows = text.split("\n").map(row => row.split(","));
            const user = rows.find(r => r[0]?.trim() === tagId);

            document.getElementById('loader').style.display = 'none';
            document.getElementById('app').style.display = 'block';

            if (user && user[1]?.trim()) {
                renderProfile(user);
            } else {
                renderSetup();
            }
        } catch (err) {
            handleCrash(err);
        }
    }

    function renderProfile(data) {
        // We sanitize every piece of data to prevent malware execution
        const name = sanitize(data[1]);
        const phone = sanitize(data[2]);
        const photo = sanitize(data[3]) || "https://via.placeholder.com/150";
        const msg = sanitize(data[4] || "I need assistance.");

        document.getElementById('content').innerHTML = `
            <img src="${photo}" style="width:120px;height:120px;border-radius:50%;object-fit:cover;margin-bottom:15px;">
            <h1>${name}</h1>
            <p>${msg}</p>
            <a href="tel:${phone}" class="btn btn-call">üìû Call Family</a>
            <button onclick="safeLocation('${phone}')" class="btn" style="background:#4A90E2; color:white;">üìç Send Location</button>
        `;
    }

    function renderSetup() {
        document.getElementById('content').innerHTML = `
            <div style="font-size:3rem;">üõ°Ô∏è</div>
            <h1>New KIN-TAG</h1>
            <p>Secure link detected. Please activate this tag to secure your items.</p>
            <a href="${CONFIG.TALLY_URL}?id=${tagId}" class="btn btn-activate">Activate Securely</a>
        `;
    }

    /**
     * 5. CRASH PREVENTION: Global Error Handling
     */
    function showError(msg) {
        document.getElementById('loader').style.display = 'none';
        const errDiv = document.getElementById('error-display');
        errDiv.style.display = 'block';
        errDiv.innerHTML = `<div class="error-state"><strong>Security Notice:</strong><br>${msg}</div>`;
    }

    function handleCrash(err) {
        console.error("System Failure:", err);
        if (err.name === 'AbortError') {
            showError("Connection timed out. Please check your signal.");
        } else {
            showError("A temporary system error occurred. Please refresh.");
        }
    }

    function safeLocation(phone) {
        // Prevent accidental double-clicks or bot-spamming
        if (window.isLocating) return;
        window.isLocating = true;

        navigator.geolocation.getCurrentPosition(
            p => {
                const map = `https://www.google.com/maps?q=${p.coords.latitude},${p.coords.longitude}`;
                window.location.href = `https://wa.me/${phone}?text=Found! Location: ${map}`;
            },
            () => { 
                alert("Location access is required for this feature.");
                window.isLocating = false;
            }
        );
    }

    // Start App
    window.onload = startApp;
</script>
</body>
</html>
